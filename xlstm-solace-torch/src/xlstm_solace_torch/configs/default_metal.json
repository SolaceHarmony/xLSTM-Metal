{
  "model_name": "xLSTM-Solace-Torch-Metal",
  "description": "Default Metal-accelerated configuration for xLSTM-Solace-Torch",
  
  "device_settings": {
    "device": "mps",
    "force_mps": true,
    "allow_cpu_fallback": false,
    "validate_metal_only": true
  },
  
  "kernel_configuration": {
    "chunkwise_kernel": "chunkwise--metal_autograd",
    "sequence_kernel": "native_sequence__metal",
    "step_kernel": "metal",
    "force_metal_kernels": true
  },
  
  "model_defaults": {
    "embedding_dim": 4096,
    "num_heads": 8,
    "num_blocks": 32,
    "vocab_size": 50304,
    "use_bias": false,
    "norm_eps": 1e-6,
    "norm_reduction_force_float32": true,
    "add_out_norm": true,
    "qk_dim_factor": 0.5,
    "v_dim_factor": 1.0,
    "gate_soft_cap": 15.0,
    "output_logit_soft_cap": 30.0,
    "chunk_size": 64,
    "mode": "inference",
    "return_last_states": true
  },
  
  "performance_settings": {
    "chunk_size": 64,
    "heads_per_band": 4,
    "workers": 6,
    "streams": 0,
    "mem_poll_ms": 200,
    "mem_soft_pct": 0.85,
    "mem_hard_pct": 0.92,
    "mem_action": "warn,empty_cache"
  },
  
  "validation_rules": {
    "require_metal_kernels": true,
    "reject_cpu_fallbacks": true,
    "enforce_mps_device": true
  }
}
